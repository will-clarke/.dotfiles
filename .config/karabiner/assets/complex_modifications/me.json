{
  "title": "!OSX application launcher",
  "rules": [
    {
      "description": "Change caps_lock to control if pressed with other keys, to escape if pressed alone.",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "command-space to emacs",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "command"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a emacs"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "hyper-e to emacs",
      "manipulators": [
        {
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": [
                "command",
                "shift",
                "control",
                "option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a emacs"
            }
          ],
          "type": "basic"
        }
      ]
    },


    {
      "description": "hyper-c to chrome",
      "manipulators": [
        {
          "from": {
            "key_code": "c",
            "modifiers": {
              "mandatory": [
                "command",
                "shift",
                "control",
                "option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a \"Google Chrome\""
            }
          ],
          "type": "basic"
        }
      ]
    },

    {
      "description": "hyper-z to zulip",
      "manipulators": [
        {
          "from": {
            "key_code": "z",
            "modifiers": {
              "mandatory": [
                "command",
                "shift",
                "control",
                "option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a \"zulip\""
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "hyper-w to wally",
      "manipulators": [
        {
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "command",
                "shift",
                "control",
                "option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a \"wally\""
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "hyper-a to alacritty",
      "manipulators": [
        {
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "command",
                "shift",
                "control",
                "option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "shell_command": "open -a \"alacritty\""
            }
          ],
          "type": "basic"
        }
      ]
    }

  ]
}
